      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper bg-dark">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="mx-5 d-flex justify-content-between">     
            <input class="form-control" type="text" name="name" id="name" placeholder="New Dashboard" value="{{dashboard.name}}" style="background: #343A40; color:white; width:20vw" required>
            <button id="save" class="btn btn-info">SAVE</button>    
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
                <div class="row my-4  ml-5">
                  <div class="col-4">
                    <select class="form-control" type="text" placeholder="role" id="role" name="role" style="background: #343A40; color:white">
                      {{#each role}}
                      <option value="{{this.id}}">{{this.name}}</option>
                      {{/each}}
                    </select>
                  </div>
                  <div class="col-4">
                  <select class="form-control" id="permission" style="background: #343A40; color:white">
                    <option value="1">Viewer</option>
                    <option value="2">Editor</option>
                    <option value="3">Admin</option>
                  </select>
                  </div>
                  <div class="col-4">
                    <button type="submit" class="btn btn-primary" id="add">Add</button>
                  </div>
                </div>
            
            <div class="card m-auto" style="width: 90%;">
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0 bg-dark" style="height: 400px">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th class="col-3 bg-secondary">Role</th>
                      <th class="col-3 text-center bg-secondary">Permission</th>
                      <th class="col-2 text-center bg-secondary">Delete</th>
                    </tr>
                  </thead>
                  <tbody id="tbody">
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer bg-dark">
    <strong>Copyright &copy; 2022 &nbsp;</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

<script>
  const tbody = $('#tbody')
  const add = $('#add')
  const remove = $('.remove')
  const save = $('#save')

  add.on('click',() => {
    const permission = $('#permission')
    const roleId = $('#role').val()
    const roles = $('.roles')
    const roleName = $('#role option:selected').text()
    const permissionText = $('#permission option:selected').text()

    for(let i = 0; i < roles.length; i++){
      if(roles[i].classList[1] === roleId) {
        toastr.error('Role already exist')
        return
      } 
    }
    tbody.append(`<tr class='roles ${roleId}'>
                  <td>${roleName}</td>
                  <td class="text-center ${permission.val()}">${permissionText}</td>
                  <td class="d-flex align-items-center justify-content-center"><i class="fas fa-minus-circle text-danger remove"></i></td>
              </tr>`)
    toastr.success('Add successfully')
  })

  tbody.on('click',(e) => {
    if(e.target.classList[3] === 'remove'){
      e.target.parentElement.parentElement.remove() 
    }
  })
  
  save.on('click', async () => {
    const name = $('#name').val()
    const roleIdArr = []
    const permissionArr = []
    for(let i = 0; i < tbody.children().length; i++){
      roleIdArr.push(tbody.children()[i].classList[1])
      permissionArr.push(tbody.children()[i].childNodes[3].classList[1])
    }

    let URL = '/dashboards'
    if('{{dashboardId}}'){
      URL = `/dashboards/{{dashboardId}}?_method=PUT`
    }
    await axios.post(URL,{name: name ,dashboardId: '{{dashboardId}}', roleId: roleIdArr, permission: permissionArr})
  })
</script>
</body>