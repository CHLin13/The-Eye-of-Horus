<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-dark d-flex justify-content-between">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
    </ul>
    <div class="d-flex align-items-center">
      <div class="hi">Hi, {{localUser.name}}{{#ifCond localUser.superuser '1'}} (Superuser){{/ifCond}}</div>
      <a href="/profile" class="nav-link" id="profile">Profile</a>
      <form action="/logout" method="post">
        <button type="submit" class="signout" >Sign out</button>
      </form>
    </div>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-2">
    <!-- Brand Logo -->
    <a href="/" class="brand-link">
      <img src="https://i.imgur.com/euLn4Te.png" alt=" Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">The Eye of Horus</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item">
            <a href="/dashboards" class="nav-link">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                Dashboard
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/alerts" class="nav-link">
              <i class="nav-icon fas fa-bell"></i>
              <p>
                Alert
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/receivers" class="nav-link">
              <i class="nav-icon fas fa-envelope"></i>
              <p>
                Receiver
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/profile" class="nav-link select">
              <i class="nav-icon fa fa-user"></i>
              <p>
                Profile
              </p>
            </a>
          </li>
          {{#ifCond localUser.superuser '1'}}
          <li class="nav-item">
            <a href="/admin/users" class="nav-link">
              <i class="nav-icon fa fa-users"></i>
              <p>
                Users
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/roles" class="nav-link">
              <i class="nav-icon fa fa-user-tag"></i>
              <p>
                Roles
              </p>
            </a>
          </li>
          {{/ifCond}}
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper bg-dark">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="mx-5 d-flex justify-content-between align-items-center">
          <div>
            <h1>Profile</h1>
          </div>
          {{#if success_messages}}
            <div class="alert alert-success" role="alert" style="opacity: 0.5;">
              {{success_messages}}
            </div>
          {{/if}}
          {{#if error_messages}}
            <div class="alert alert-danger" role="alert" style="opacity: 0.5;">
              {{error_messages}}
            </div>
          {{/if}}
          {{#if error}}
            <div class="alert alert-danger" role="alert" style="opacity: 0.5;">
              {{error}}
            </div>
          {{/if}}
          <div class="d-flex justify-content-end">
              <a href="/profile/{{localUser.id}}"><button class="btn buttons">Edit</button></a>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card m-auto bg-dark" style="width: 90%;">
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0" style="height: 500px">
                <div class="border-bottom border-light p-3" style="height: 50%;">
                  <div class="mt-5 ml-5">Name: <span>{{localUser.name}}</span></div> 
                  <div class="mt-3 ml-5">Email: <span>{{localUser.email}}</span></div>
                </div>
                <div class="p-3">
                  <h4 >Roles</h4>
                  {{#if localUser.role_name}}
                  {{#each localUser.role_name}}
                  <div class="mt-3 ml-5 btn btn-secondary inactive disabled">{{this}}</div>
                  {{/each}}
                  {{else}}
                  <div class="mt-3 ml-5">No roles</div>
                  {{/if}}
                </div>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer bg-dark">
    <strong>Copyright &copy; 2022 &nbsp;</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->
</body>