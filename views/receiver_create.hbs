<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-dark">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/" class="brand-link">
      <img src="https://i.imgur.com/euLn4Te.png" alt=" Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">The Eye of Horus</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item">
            <a href="/dashboards" class="nav-link">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                Dashboard
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/alerts" class="nav-link">
              <i class="nav-icon fas fa-bell"></i>
              <p>
                Alert
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/receivers" class="nav-link select">
              <i class="nav-icon fas fa-envelope"></i>
              <p>
                Receiver
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/profile" class="nav-link">
              <i class="nav-icon fa fa-user"></i>
              <p>
                Profile
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/users" class="nav-link">
              <i class="nav-icon fa fa-users"></i>
              <p>
                Users
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/roles" class="nav-link">
              <i class="nav-icon fa fa-user-tag"></i>
              <p>
                Roles
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper bg-dark">
    <section class="content pt-5">
      <div class="container-fluid">
        <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card m-auto bg-dark" style="width: 90%;">
              <!-- form start -->
              <form {{#if receiver}} action="/receivers/{{receiver.id}}?_method=PUT" {{else}} action="/receivers" {{/if}} method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Name" value={{receiver.name}}>
                  </div>
                  <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="Description" value={{receiver.description}}>
                  </div>
                  <div class="form-group mb-5">
                    <label for="status">Type</label>
                    <select class="form-control" id="type" name="type">
                      <option value="Email" {{#ifCond receiver.type 'Email'}}selected{{/ifCond}}>Email</option>
                      <option value="Slack" {{#ifCond receiver.type 'Slack'}}selected{{/ifCond}}>Slack</option>
                      <option value="Discord" {{#ifCond receiver.type 'Discord'}}selected{{/ifCond}}>Discord</option>
                    </select>
                  </div>
                  <div class="form-group row" id="email">
                    <label for="emailValue" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="emailValue" name="emailValue" placeholder="email@example.com" value="{{receiver.d0}}" >
                    </div>
                  </div>
                  <div class="form-group row d-none" id="slack">
                    <label for="webhookURL" class="col-sm-2 col-form-label">webhookURL</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="webhookURL" name="webhookURL" placeholder="https://hooks.slack.com/services/TT3AGEYIK2D/Y63KL5ATFR8/BtVtp3SDGCVSersdjliE" value="{{receiver.d0}}">
                    </div>
                  </div>
                  <div class="form-group row d-none" id="discord">
                      <label for="idValue" class="col-sm-2 col-form-label mb-3">ID</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="idValue" name="idValue" placeholder="123456789012345678" value="{{receiver.d0}}">
                      </div>
                      <label for="tokenValue" class="col-sm-2 col-form-label">Token</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="tokenValue" name="tokenValue" placeholder="fHcPlAKpqNpd_LlqrfxHdksegWAdfwdgersda4PB5ANU9ssfrgarxxhRWg7X" value="{{receiver.d1}}">
                      </div>
                  </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-secondary">Save</button>
                </div>
              </form>
            <!-- /.card -->
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer bg-dark">
    <strong>Copyright &copy; 2022 &nbsp;</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->
</body>
<script>
  const type = $('#type')
  const email = $('#email')
  const slack = $('#slack')
  const discord = $('#discord')
  const emailValue = $('#emailValue')
  const webhookURL = $('#webhookURL')
  const idValue = $('#idValue')
  const tokenValue = $('#tokenValue')
  
  if(type.val() === 'Email'){
    email[0].classList.remove('d-none')
    slack[0].classList.add('d-none')
    discord[0].classList.add('d-none')
    webhookURL.val(null)
    idValue.val(null)
    tokenValue.val(null)
  } else if (type.val() === 'Slack'){
    email[0].classList.add('d-none')
    slack[0].classList.remove('d-none')
    discord[0].classList.add('d-none')
    emailValue.val(null)
    idValue.val(null)
    tokenValue.val(null)
  } else if (type.val() === 'Discord') {
    email[0].classList.add('d-none')
    slack[0].classList.add('d-none')
    discord[0].classList.remove('d-none')
    emailValue.val(null)
    webhookURL.val(null)
  }

  type.change(()=> {
    if (type[0].value === 'Email') {
      email[0].classList.remove('d-none')
      slack[0].classList.add('d-none')
      discord[0].classList.add('d-none')
      webhookURL.val(null)
      idValue.val(null)
      tokenValue.val(null)
    } else if (type[0].value === 'Slack') {
      email[0].classList.add('d-none')
      slack[0].classList.remove('d-none')
      discord[0].classList.add('d-none')
      emailValue.val(null)
      idValue.val(null)
      tokenValue.val(null)
    } else if (type[0].value === 'Discord') {
      email[0].classList.add('d-none')
      slack[0].classList.add('d-none')
      discord[0].classList.remove('d-none')
      emailValue.val(null)
      webhookURL.val(null)
    }
  })
</script>