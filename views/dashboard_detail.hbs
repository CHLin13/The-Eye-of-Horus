<body class="hold-transition sidebar-mini">
  <script>
    const units = {
          s: 1,
          m: 60,
          h: 60 * 60,
          d: 24 * 60 * 60,
          M: 30 * 24 * 60 * 60,
          y: 365 * 30 * 24 * 60 * 60,
        };
    async function chart(id, time_range, database, measurement, chart_type, interval, interval_unit, selects, layout) {

    const response = await axios.post('/dashboards/chart/preview',{
      timeRange: time_range,
      source: database + '/' + measurement,
      style: chart_type,
      interval: interval,
      interval_unit: interval_unit,
      select: selects
    });

    const chart = $(`.${id}`)[0]
    const result = response.data.data
    const select = response.data.select + '_value'
    const rangeIntoSec = (`${time_range}`.split('-')[0] * units[`${time_range}`.split('-')[1]])*1000;
    const data = []
    for(let i = 0; i < result.length; i ++){
      const trace = {
        x: result[i].rows.map(row => row.time),
        y: result[i].rows.map(row => row[select]),
        type: chart_type,
        name: result[i].tags.type_instance,
        connectgaps: true
      }
      if(result[i].tags.type_instance !== 'idle'){
        data.push(trace)
      }
    }

    var layout = JSON.parse(layout)

    Plotly.newPlot(chart, data, layout);
  }
  </script>
